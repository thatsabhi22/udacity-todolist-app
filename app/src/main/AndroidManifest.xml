<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.theleafapps.pro.todolist">

    <application
        android:name="com.theleafapps.pro.todolist.MyCustomApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <!-- The manifest entry for the MainActivity -->
        <activity
            android:name="com.theleafapps.pro.todolist.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- AddTaskActivity -->
        <activity
            android:name="com.theleafapps.pro.todolist.AddTaskActivity"
            android:label="@string/add_task_activity_name"
            android:theme="@style/AppTheme.NoActionBar"/>

        <provider
            android:name="com.theleafapps.pro.todolist.data.TaskContentProvider"
            android:authorities="com.theleafapps.pro.todolist"
            android:exported="false" />
    </application>

</manifest>